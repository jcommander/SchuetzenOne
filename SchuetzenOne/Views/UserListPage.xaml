<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:SchuetzenOne.Models"
             xmlns:viewmodels="clr-namespace:SchuetzenOne.ViewModels"
             x:Class="SchuetzenOne.Views.UserListPage"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="True"
             Title="Der glühende Colt"
             x:DataType="viewmodels:UserListViewModel">
    
    <ContentPage.Background>
        <!-- StartPoint defaults to (0,0) -->
        <LinearGradientBrush StartPoint="0.6,0" EndPoint="0.5,1">
            <GradientStop Color="#121212"
                          Offset="0.85" />
            <GradientStop Color="#606B9D40"
                          Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="*,Auto">
        <RefreshView
            Grid.ColumnSpan="2"
            Command="{Binding GetUsersCommand}"
            IsRefreshing="{Binding IsRefreshing}">
            <CollectionView 
                  VerticalOptions="Fill"
                  ItemsSource="{Binding Users}"
                  SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:User">
                        <Frame Margin="8" Padding="30">
                            <Grid ColumnDefinitions="*, 50">
                                <Label Text="{Binding Name}"
                                   VerticalTextAlignment="Center"/>
                                <HorizontalStackLayout Grid.Column="1" Spacing="12">
                                    <Label Text="✔️"
                                       VerticalTextAlignment="Center"
                                       IsVisible="{Binding Active}"/>
                                    <Label Text="🎁"
                                       VerticalTextAlignment="Center"
                                       IsVisible="{Binding HasBirthday}"/>
                                </HorizontalStackLayout>
                            </Grid>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:UserListViewModel}}, Path=EditUserCommand}"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        <VerticalStackLayout
            Grid.Row="1"
            Grid.Column="0">
            <Button
            Margin="16, 6"
            Command="{Binding AddUserCommand}"
            IsEnabled="{Binding IsNotBusy}"
            Text="Add User" />
            <Button
                Margin="16, 6"
                
                Command="{Binding GetUsersCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Text="Get Users" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
